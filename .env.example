# Evently Platform Environment Configuration Template
# Copy this file to .env and update values for your environment

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=jdbc:postgresql://localhost:5432/evently-db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_POOL_SIZE=50
DATABASE_MIN_IDLE=10

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0
REDIS_TIMEOUT=2000
REDIS_POOL_MAX_ACTIVE=50

# ==============================================
# KAFKA CONFIGURATION
# ==============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=evently-consumer-group
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# For production with SSL:
# KAFKA_SECURITY_PROTOCOL=SSL
# KAFKA_SSL_KEYSTORE_LOCATION=/path/to/keystore.jks
# KAFKA_SSL_KEYSTORE_PASSWORD=keystorepass
# KAFKA_SSL_TRUSTSTORE_LOCATION=/path/to/truststore.jks
# KAFKA_SSL_TRUSTSTORE_PASSWORD=truststorepass

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Development (MailHog)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=false
MAIL_SMTP_STARTTLS=false

# Production (e.g., SendGrid, AWS SES, Gmail)
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key
# MAIL_SMTP_AUTH=true
# MAIL_SMTP_STARTTLS=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Configuration
JWT_SECRET_KEY=your_256_bit_secret_key_change_this_in_production
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# Admin Token (for simple auth in development)
ADMIN_TOKEN=your_secure_admin_token_change_this

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=development

# Evently Business Configuration
EVENTLY_BOOKING_MAX_TICKETS=10
EVENTLY_BOOKING_CANCELLATION_DEADLINE_HOURS=2
EVENTLY_WAITLIST_BOOKING_WINDOW_MINUTES=10
EVENTLY_WAITLIST_MAX_POSITION=100

# Email Configuration
EVENTLY_EMAIL_FROM_ADDRESS=noreply@evently.com
EVENTLY_EMAIL_FROM_NAME=Evently Platform

# Cache TTL Configuration (seconds)
EVENTLY_CACHE_EVENTS_TTL=300
EVENTLY_CACHE_EVENT_DETAILS_TTL=600

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
MANAGEMENT_ENDPOINTS_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_EVENTLY=INFO
LOG_LEVEL_SQL=WARN

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================
# Uncomment and modify for production deployment

# Database (Production)
# DATABASE_URL=jdbc:postgresql://prod-db-host:5432/evently_prod
# DATABASE_POOL_SIZE=100
# DATABASE_MIN_IDLE=20

# Redis (Production Cluster)
# REDIS_CLUSTER_NODES=redis-1:6379,redis-2:6379,redis-3:6379
# REDIS_PASSWORD=production_redis_password

# Security (Production)
# JWT_SECRET_KEY=very_long_random_256_bit_production_secret
# ADMIN_TOKEN=production_admin_token_very_secure

# Performance Tuning
# JVM_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200
